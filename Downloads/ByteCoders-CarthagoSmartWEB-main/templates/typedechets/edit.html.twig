{% extends 'base.html.twig' %}

{% block title %}Modifier Déchets{% endblock %}

{% block body %}

   <div style="display: flex; justify-content: center; align-items: center; margin-top: 150px; padding: 10px;">
          <div class="card">
            <div class="card-body">
              <a href="{{ path('app_typedechets_index') }}"><i class="ri-arrow-left-circle-fill" style="font-size: 50px;"></i></a>

              <h5 class="card-title">Modifier type de déchets :</h5>
              <!-- General Form Elements -->
              {{ form_start(form, {attr:{'novalidate':'novalidate'}}) }}
              
                
                    <!-- Type de déchets -->
                    <div class="row mb-3">
                        <label for="name" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-6">
                            {{ form_row(form.name, {'attr': {'class': 'form-control form-control-lg'}}) }}
                            
                        </div>
                    </div>

                    <!-- Catégorie -->
                    <div class="row mb-3">
                        <label for="categorie" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            {{ form_row(form.categorie, {'attr': {'class': 'form-control form-control-lg'}}) }}
                        </div>
                    </div>

                    <!-- Bouton Ajouter -->
                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-1" style="display: flex; align-items: center; justify-content: center">
                            <button type="submit" class="btn btn-primary">Modifier</button>
                        </div>
                    </div>




              {{ form_end(form)}}

            </div>
          </div>

        </div>
{% endblock %}
