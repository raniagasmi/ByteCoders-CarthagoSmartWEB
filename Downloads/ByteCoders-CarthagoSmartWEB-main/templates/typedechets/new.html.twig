{% extends 'base.html.twig' %}

{% block title %}Ajouter Déchets{% endblock %}

{% block body %}

   <div class="d-flex justify-content-center align-items-center mt-5">
       <div class="card">
           <div class="card-body">
               <a href="{{ path('app_typedechets_index') }}" class="btn btn-secondary"><i class="ri-arrow-left-circle-fill"></i> Retour</a>
               <h5 class="card-title mt-3">Ajouter un type de déchets :</h5>
               <!-- General Form Elements -->
               {{ form_start(form, {attr:{'novalidate':'novalidate'}}) }}

               <!-- Nom du déchet -->
               <div class="row mb-3">
                   <label for="name" class="col-sm-3 col-form-label">Nom du déchet</label>
                   <div class="col-sm-9">
                       {{ form_row(form.name, {'attr': {'class': 'form-control form-control-lg'}}) }}
                   </div>
               </div>

               <!-- Catégorie -->
               <div class="row mb-3">
                   <label for="categorie" class="col-sm-3 col-form-label">Catégorie</label>
                   <div class="col-sm-9">
                       {{ form_row(form.categorie, {'attr': {'class': 'form-control form-control-lg'}}) }}
                   </div>
               </div>

               <!-- Bouton Ajouter -->
               <div class="row mb-3">
                   <div class="col-sm-12 text-center">
                       <button type="submit" class="btn btn-primary">Ajouter</button>
                   </div>
               </div>

               {{ form_end(form)}}

           </div>
       </div>
   </div>

{% endblock %}
