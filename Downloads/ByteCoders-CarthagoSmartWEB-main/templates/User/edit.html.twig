{% extends 'base.html.twig' %}

{% block title %}Modifier un user{% endblock %}

{% block body %}

   <div style="display: flex; justify-content: center; align-items: center; margin-top: 150px; padding: 10px;">
          <div class="card">
            <div class="card-body">
              <a href="{{ path('app_user_index') }}">

              <h5 class="card-title">Modifier user :</h5>
              <!-- General Form Elements -->
              {{ form_start(form, {attr:{'novalidate':'novalidate'}}) }}
              
                
                    <!-- Type de dÃ©chets -->
                    <div class="row mb-3">
                        <label for="isVerified" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-8">
                            {{ form_widget(form.isVerified, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <!-- pointramassage -->
                    <div class="row mb-3">
                        <label for="status" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-8">
                            {{ form_row(form.status) }}
                        </div>
                    </div>
                   
                    <!-- Bouton Ajouter -->
                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-1" style="display: flex; align-items: center; justify-content: center">
                            <button type="submit" class="btn btn-primary">Modifier</button>
                        </div>
                    </div>



              {{ form_end(form)}}

            </div>
          </div>

        </div>
{% endblock %}


