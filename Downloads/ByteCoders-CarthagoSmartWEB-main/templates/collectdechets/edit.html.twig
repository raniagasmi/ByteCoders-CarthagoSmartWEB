{% extends 'base.html.twig' %}

{% block title %}Modifier collectdechet{% endblock %}

{% block body %}

   <div class="d-flex justify-content-center align-items-center mt-5">
       <div class="card">
           <div class="card-body">
               <a href="{{ path('app_collectdechets_index') }}"><i class="ri-arrow-left-circle-fill" style="font-size: 50px;"></i></a>

               <h5 class="card-title mt-3">Modifier un collect déchets :</h5>
               <!-- General Form Elements -->
               {{ form_start(form, {attr:{'novalidate':'novalidate'}}) }}

               <!-- Type de déchets -->
               <div class="row mb-3">
                   <label for="Sélectionner le déchet" class="col-sm-2 col-form-label"></label>
                   <div class="col-sm-10">
                       {{ form_widget(form.id, {'attr': {'class': 'form-control'}}) }}
                   </div>
               </div>

               <!-- pointramassage -->
               <div class="row mb-3">
                   <label for="Point de ramassage" class="col-sm-2 col-form-label"></label>
                   <div class="col-sm-10">
                       {{ form_row(form.pointramassage, {'attr': {'class': 'form-control'}}) }}
                   </div>
               </div>

               <!-- dateramassage -->
               <div class="row mb-3">
                   <label for="Date de ramassage" class="col-sm-2 col-form-label"></label>
                   <div class="col-sm-10">
                       {{ form_row(form.dateramassage, {'attr': {'class': 'form-control', 'id': 'dateramassage', 'style': 'height: 40px;'}}) }}
                   </div>
               </div>

               <!-- Bouton Modifier -->
               <div class="row mb-3">
                   <div class="col-sm-12 text-center">
                       <button type="submit" class="btn btn-primary">Modifier</button>
                   </div>
               </div>

               {{ form_end(form)}}

           </div>
       </div>
   </div>

{% endblock %}
