{% extends 'blog/base.html.twig' %}

{% block body %}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<section class="section">
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Liste des réservations: ({{ reservations|length }})</h5>

                        <!-- Table with stripped rows -->
                        <table class="table table-sm table-striped">
                            <thead>
                                <tr>
                                    <th>Email</th>
                                    <th>Numero</th>
                                    <th>NbrPlace</th>
                                    <th>nomEvent</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for reservation in reservations %}
                                    <tr>
                                        <td>{{ reservation.email }}</td>
                                        <td>{{ reservation.numero }}</td>
                                        <td>{{ reservation.nbrPlace }}</td>
                                        <td>{{ reservation.event }}</td>
                                        <td>
                                            <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}"><i class="fas fa-eye"></i></a>
                                            <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}"><i class="fas fa-edit"></i></a>
                                            <form action="{{ path('envoyer_email') }}" method="post" style="display: inline;">
                                            <input type="hidden" name="email" value="{{ reservation.email }}">
                                            <button type="submit" class="btn btn-link"><i class="fas fa-envelope"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5">Aucun enregistrement trouvé</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>

                        <div style="display: flex; align-items: center; justify-content: center;">
                            <!-- Pagination rendering code here -->
                        </div>

                        <a href="{{ path('app_reservation_new') }}"><i class="fas fa-plus"></i> Créer réservation</a>
                        <!-- End small tables -->

                    </div>
                </div>
            </div>
        </div>
        
        <div class="row justify-content-center mt-5">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body pb-0">
                        <h5 class="card-title">Statistiques</h5>
                        <div id="eventChart" style="min-height: 400px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const eventChartData = [
            {% for reservation in reservations %}
                { value: 1, name: "{{ reservation.event }}" },
            {% endfor %}
        ];

        const eventChart = echarts.init(document.querySelector("#eventChart"));
        eventChart.setOption({
            tooltip: {
                trigger: 'item'
            },
            legend: {
                top: '5%',
                left: 'center'
            },
            series: [{
                name: 'Nombre de réservations par événement',
                type: 'pie',
                radius: ['40%', '70%'],
                avoidLabelOverlap: false,
                label: {
                    show: false,
                    position: 'center'
                },
                emphasis: {
                    label: {
                        show: true,
                        fontSize: '18',
                        fontWeight: 'bold'
                    }
                },
                labelLine: {
                    show: false
                },
                data: eventChartData
            }]
        });
    });
</script>

{% endblock %}
