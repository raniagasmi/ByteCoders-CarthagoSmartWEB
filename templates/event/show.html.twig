{% extends 'blog/base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">{{ event.nomEvent }}</h2>
        </div>
        <div class="card-body">
            <h5 class="card-subtitle mb-3">Event Details</h5>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th scope="row">Nom</th>
                        <td>{{ event.nomEvent }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Category</th>
                        <td>{{ event.categorie }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Date</th>
                        <td>{{ event.date ? event.date|date('Y-m-d') : 'TBD' }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Time</th>
                        <td>{{ event.heure ? event.heure|date('H:i:s') : 'TBD' }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Location</th>
                        <td>{{ event.lieu }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Capacity</th>
                        <td>{{ event.capacite }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Cost</th>
                        <td>{{ event.cout }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Image</th>
                        <td>
                            {% if event.image %}
                                <img src="{{ asset('images/' ~ event.image) }}" alt="Event Image" class="img-fluid" style="max-width: 100px;">
                            {% else %}
                                Image not available
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-between mt-4">
                <div>
                    <a href="{{ path('app_event_index') }}" class="btn btn-primary">Back to list</a>
                    <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-warning">Edit</a>
                    {{ include('event/_delete_form.html.twig') }}
                </div>
                <div>
                    <h5 class="text-secondary">QR Code for this event</h5>
                    {% set qr_code_content = event ~ "-" ~ event.categorie %}
                    <img src="{{ qr_code_data_uri(qr_code_content) }}" alt="QR Code for Event" class="img-fluid" style="max-width: 100px;">
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
