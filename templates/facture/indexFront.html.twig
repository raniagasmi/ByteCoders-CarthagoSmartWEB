{% extends 'base-front.html.twig' %}

{% block title %}User index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        .facture-card {
            background-color: #f9f9f9;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            margin: 20px;
            cursor: pointer;
            overflow: hidden;
        }

        .facture-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .facture-icon {
            font-size: 300px;
            color: #3366ff;
            margin-bottom: 20px;
            transition: transform 0.3s ease;
            text-align: center;
            display: block;
        }

        .facture-icon:hover {
            transform: scale(1.1);
        }

        .create-button {
            background-color: #3366ff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
            display: inline-block;
            margin-top: 20px;
            display: block;
            width: fit-content;
            margin: 20px auto;
        }

        .create-button:hover {
            background-color: #2556cc;
        }
    </style>
{% endblock %}

{% block body %}
    <section class="section">
        <div class="container">
            <h2 style="text-align: center; color: #3366ff;">Liste des factures: ({{ factures.getTotalItemCount }})</h2>
            <div class="row">
                {% for facture in factures %}
                    <div class="col-md-6 col-lg-4">
                        <div class="facture-card" onclick="showDetails('{{ path('app_facture_showFront', {'idFacture': facture.idFacture}) }}')">
                            <div class="facture-icon">
                                {% if facture.type == 'EAU' %}
                                    <a href="{{ path('app_facture_showFront', {'idFacture': facture.idFacture}) }}"><i class="fas fa-tint" style="color: #4CAF50;"></i></a>
                                {% elseif facture.type == 'ENERGY' %}
                                    <a href="{{ path('app_facture_showFront', {'idFacture': facture.idFacture}) }}"><i class="fas fa-bolt" style="color: #FFC107;"></i></a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <a href="{{ path('app_facture_new') }}" class="create-button"><i class="fas fa-plus"></i> Cr√©er facture</a>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function showDetails(url) {
            alert('Redirecting to facture details page: ' + url);
            window.location.href = url;
        }
    </script>
{% endblock %}
